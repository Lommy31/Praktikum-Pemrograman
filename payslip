#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    string name;
    int gsalary, tax, instal, insue, net;
     cout<<"Payslip For Employee";
     cout<<"\n--------------------------";
cout<<"\nName of the employee: ";
cin >> name;
cout<<"The Gross Salary: : Rp";
cin >> gsalary;
tax = gsalary * 0.2;
cout<<"Tax (20%): Rp" << tax << endl;
cout<<"Installment: Rp";
cin >> instal;
cout<<"Insurance: Rp";
cin >> insue;
net = gsalary - 0.2 - instal - insue;
cout<<"Net Salary: Rp"<< net << endl;
return 0;
}
